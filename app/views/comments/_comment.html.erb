<% comment||= nil %>
<% if comment %>
 <div class="list-group-item list-group-item-aciton" id="comment-<%= comment.id %>">
  <div class="row">
    <div class="col-md-2"> <%= comment.user&.email %> </div>
    <div class="col-md-8"> <%= comment.content %> </div>
    <div class="col-md-1"> <p style="font-size:0.8em"><%= time_ago_in_words(comment.created_at) %></p> </div>
    <div class="col-md-1 float-right">
      <% if current_user == comment.user %>
        <%=link_to "삭제", comment_path(comment), class: "text-danger float-right", method: :delete, remote: true%>
      <% end %>
    </div>
  </div>
 </div>
<% end %>